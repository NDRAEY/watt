// a tractor 🚜
type Tractor(storage) {
    // amount of 🌾
    value := 0
    // fill 🌿
    fun fill(value) {
        if self.value + value > storage {
            self.value = storage
            return null
        }
        self.value += value
    }
    // print 📜
    fun print() {
        io.print('tractor value: ')
        io.println(self.value)
    }
}

tractor := new Tractor(100)
tractor.fill(50)
tractor.print()
tractor.fill(70)
tractor.print()